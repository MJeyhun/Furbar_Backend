
@model SliderVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <a asp-action="create" class="btn btn-success">Create Slider</a>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                                @foreach (var item in Model.Sliders)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/images/slider/@item.ImageUrl" width="100" height="100" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.Description.Substring(0,5)...
                                        </td>
                                        <td>
                                            <a asp-action="details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>

                                    </tr>

                                }
                            

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>