@using Furbar.ViewModels.ProductViewModels;
@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description">
                    Create Product Form
                </p>
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Information"></label>
                        <input asp-for="Information" class="form-control" placeholder="Information">
                        <span class="text-danger" asp-validation-for="Information"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Size"></label>
                        <input asp-for="Size" class="form-control" placeholder="Size">
                        <span class="text-danger" asp-validation-for="Size"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FrameSize"></label>
                        <input asp-for="FrameSize" class="form-control" placeholder="FrameSize">
                        <span class="text-danger" asp-validation-for="FrameSize"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
              
                    <div class="form-group">
                        <label asp-for="Count"></label>
                        <input asp-for="Count" class="form-control" placeholder="Count">
                        <span class="text-danger" asp-validation-for="Count"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Material"></label>
                        <input asp-for="Material" class="form-control" placeholder="Material">
                        <span class="text-danger" asp-validation-for="Material"></span>
                    </div>
             
                
                    <h2>Colors:</h2>
                    <div class="form-group" enctype="multipart/form-data">
                        <label asp-for="ColorIds"></label>
                        <select asp-for="ColorIds" class="form-select" asp-items="@ViewBag.Colors" aria-label="Default select example">
                        </select>
                        <span class="text-danger" asp-validation-for="ColorIds"></span>
                    </div>  
                    <h2>Categories:</h2>
                    <div class="form-group" enctype="multipart/form-data">
                        <label asp-for="CategoryIds"></label>
                        <select asp-for="CategoryIds" class="form-select" asp-items="@ViewBag.Categories" aria-label="Default select example">
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryIds"></span>
                    </div>
                      <div class="form-group">
                         <label asp-for="Images"></label>
                           <input asp-for="Images" class="form-control" placeholder="Images">
                           <span class="text-danger" asp-validation-for="Images"></span>
                       </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="index" class="btn btn-dark">Return Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Html.Partial("_ValidationPartial")
}