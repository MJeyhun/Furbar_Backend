@using Furbar.ViewModels.ProductViewModels;
@model ProductDetailVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @foreach(var image in Model.ProductImages)
                {
                    <img src="~/images/product/@image.ImageUrl" width="100" height="100" />
                }
                <h2 class="card-title">@Model.Name</h2>
                <h4 class="card-title">@Model.Description</h4>
                <p>Size:<h4 class="card-title">@Model.Size</h4></p>
                <p>FrameSize:<h4 class="card-title">@Model.FrameSize</h4></p>
                <p>Material:<h4 class="card-title">@Model.Material</h4></p>
                <p class="card-title">@Model.Information</p>
                <p>Count:<h4 class="card-title">@Model.Count</h4></p>
                <p>Price:<h4 class="card-title">$@Model.Price</h4></p>

                <p>
                    Colors:@foreach (var color in Model.ProductColors)
                    {
                        <span>@color.Color.Name</span>
                    }
                </p>


                <p>
                    Categories:@foreach (var category in Model.ProductCategories)
                    {
                        <span>@category.Category.Name</span>
                    }
                </p>

                <a asp-action="index" class="btn btn-dark">Return Back</a>
            </div>
        </div>
    </div>
</div>

