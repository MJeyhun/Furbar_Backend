

@model List<AppUser>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
     <form asp-controller="user" asp-action="index">
        <input name="search" value=""/>
        <button type="submit">Search</button>
    </form>
    <div class="col-lg-12 grid-margin stretch-card">
    
     <div class="card">
       <div class="card-body">
         <h4 class="card-title">User Table</h4>


         <div class="table-responsive">
           <table class="table">
             <thead>
               <tr>
                 <th>Fullname</th>
                 <th>Is active?</th>
                 <th>Username</th>
                 <th>Settings</th>
               </tr>
             </thead>
             <tbody>
                            @foreach (var item in Model)
                            {
                                 <tr>
                                   <td>
                                       @item.Fullname
                                   </td>
                                   <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">DeActive</span>
                                        }
                                    </td>
                                   <td>
                                        @item.UserName
                                   </td>
                                   <td>
                                       <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                               <i class="mdi mdi-account-card-details"></i>
                                       </a>
                                           <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                   <i class="mdi mdi-tooltip-edit"></i>
                                       </a>
                                       <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                               <i class="mdi mdi-delete"></i>
                                       </a>
                                       <a asp-action="editRole" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                   <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                   </td>

                                </tr>

                            }
             </tbody>
           </table>
         </div>
       </div>
     </div>
 </div>
</div>

