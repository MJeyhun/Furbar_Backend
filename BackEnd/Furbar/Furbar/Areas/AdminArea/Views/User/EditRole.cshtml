@using Furbar.ViewModels.Account.Users;

@model ChangeRoleVM
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
         <form method="post">
            @foreach (var role in Model.AllRoles)
            {
                @if (Model.UserRoles.Any(r => r == role.Name))
                {
                    <input name="roles" value="@role.Name" type="checkbox" checked/> @role.Name <br/>
                }
                else
                {
                            <input name="roles" value="@role.Name" type="checkbox"/> @role.Name <br/>    
                }
            }
            <button type="submit">Change Role</button>
        </form>
    </div>
</div>

