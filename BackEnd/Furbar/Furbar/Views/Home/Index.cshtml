                                    <span class="value countdown__time secsText"></span>
                                </div>
                            </div>
                        </div>

                        <a asp-controller="shop" asp-action="index" class="btn btn-primary btn-hover-dark">Shop Now</a>
                    </div>
                    <!-- Countdown Content End -->
