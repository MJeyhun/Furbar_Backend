                        <div class="shape-1"></div>
                        <div class="shape-2"></div>
                        <div class="shape-3"></div>

                        <div class="image-box">
                            <img src="~/images/countdown.png" width="480" height="383" alt="Countdown" />
                        </div>
                    </div>
                    <!-- Countdown Images End -->
                </div>
            </div>
        </div>
