
@model homeVM
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Slider Section Start -->
<div class="section slider-section-02">
    <div class="slider-active">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                @foreach(var slider in Model.Sliders)
                {
                    <!-- Single Slider Start  -->
                    <div class="single-slider slider-02 swiper-slide animation-style-01" style="
                                background-image: url(images/slider/@slider.ImageUrl);
                            ">
                        <div class="container">
                            <!-- Slider Content Start -->
                            <div class="slider-content-02 text-center">
                                <h2 class="title">
                                    @slider.Title
                                </h2>
                                <p>
                                    @slider.Description <br />
                                    Our Shop, 30% Offer All Stylish Kitchen
                                    Furniture
                                </p>
                                <a asp-controller="shop" asp-action="index" class="btn btn-primary btn-hover-dark btn-margin">purchase now</a>
                            </div>
                            <!-- Slider Content End -->
                        </div>
                    </div>
                    <!-- Single Slider End  -->
                }

                <!-- Add Arrows -->
                <div class="swiper-button-next">Next</div>
                <div class="swiper-button-prev">Prev</div>
            </div>
        </div>
    </div>
</div>
<!-- Slider Section End -->
<!-- Benefit Section Start -->
<div class="section section-padding-02">
    <div class="container">
        <!-- Benefit Wrapper Start -->
        <div class="benefit-wrapper">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <!-- Single Benefit Start -->
                    <div class="single-benefit">
                        <img src="~/images/icon/icon-1.png" width="70" height="92" alt="Icon" />
                        <h3 class="title">Free Shipping</h3>
                        <p>
                            Get 10% cash back, free shipping, free
                            returns, and more at 1000+ top retailers!
                        </p>
                    </div>
                    <!-- Single Benefit End -->
                </div>
                <div class="col-lg-4 col-md-6">
                    <!-- Single Benefit Start -->
                    <div class="single-benefit">
                        <img src="~/images/icon/icon-2.png" width="70" height="92" alt="Icon" />
                        <h3 class="title">Safe Payment</h3>
                        <p>
                            Get 10% cash back, free shipping, free
                            returns, and more at 1000+ top retailers!
                        </p>
                    </div>
                    <!-- Single Benefit End -->
                </div>
                <div class="col-lg-4 col-md-6">
                    <!-- Single Benefit Start -->
                    <div class="single-benefit">
                        <img src="~/images/icon/icon-3.png" width="70" height="92" alt="Icon" />
                        <h3 class="title">Online Support</h3>
                        <p>
                            Get 10% cash back, free shipping, free
                            returns, and more at 1000+ top retailers!
                        </p>
                    </div>
                    <!-- Single Benefit End -->
                </div>
            </div>
        </div>
        <!-- Benefit Wrapper End -->
    </div>
</div>
<!-- Benefit Section End -->
<!-- New Product Section Start -->
<div class="section section-padding-02">
    <div class="container">
        <!-- Section Title Start -->
        <div class="section-title-02 text-center">
            <h2 class="title">New Products</h2>
        </div>
        <!-- Section Title End -->
        <!-- Product Wrapper 02 Start -->
        <div class="product-wrapper-02">
            <!-- Product Menu Start -->
            <div class="product-menu">
                <ul class="nav justify-content-center">
                    <li>
                        <button class="active" data-bs-toggle="tab" data-bs-target="#tab1">
                            All
                        </button>
                    </li>
              
                 
                </ul>
            </div>
            <!-- Product Menu End -->
            <!-- Product Tabs Content Start -->
            <div class="product-tabs-content">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab1">
                        <div class="row">
                            @foreach(var product in Model.Products)
                            {
                                <div class="col-lg-3 col-sm-6">
                                    <!-- Single Product Start -->
                                    <div class="single-product-02">
                                        <div class="product-images">
                                            <a asp-controller="productdetail" asp-action="index" asp-route-id="@product.Id"><img src="~/images/product/@product.ProductImages.FirstOrDefault().ImageUrl" width="270" height="303" alt="product" /></a>

                                            <ul class="product-meta">
                                                <li>
                                                    <a class="action" data-bs-toggle="modal" data-bs-target="#quickView" asp-controller="productdetail" asp-action="index" asp-route-id="@product.Id">
                                                        <i class="fa-solid fa-magnifying-glass"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    @if (User.Identity.IsAuthenticated)
                                                    {
                                                        <a class="action" asp-controller="cart" asp-action="add" asp-route-id="@product.Id" asp-route-name="@product.Name">
                                                            <i class="fa-solid fa-cart-shopping"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="action" asp-controller="account" asp-action="login">
                                                            <i class="fa-solid fa-cart-shopping"></i>
                                                        </a>
                                                    }
                                                </li>
                                                <li>
                                                    @if (User.Identity.IsAuthenticated)
                                                    {
                                                        <a class="action" asp-controller="wishlist" asp-action="add" asp-route-id="@product.Id"><i class="fa-regular fa-heart"></i></a>
                                                    }
                                                    else
                                                    {
                                                        <a class="action" asp-controller="account" asp-action="login"><i class="fa-regular fa-heart"></i></a>
                                                    }
                                                    
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="product-content">
                                            <h4 class="title">
                                                <a href="#l">
                                                   @product.Name
                                                </a>
                                            </h4>
                                            <div class="price">
                                                <span class="sale-price">$@product.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Single Product End -->
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
            <!-- Product Tabs Content End -->
        </div>
        <!-- Product Wrapper 02 End -->
    </div>
</div>
<!-- New Product Section End -->
